{
  "name": "cotizador-app",
  "version": "1.0.1",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "preview": "vite preview",
  "vite:dev": "vite --port 5174 --strictPort",
  "dev:desktop": "concurrently -k \"npm run vite:dev\" \"npm run electron:wait\"",
  "electron:wait": "wait-on http://localhost:5174 && npm run electron:dev",
  "electron:dev": "cross-env ELECTRON_START_URL=http://localhost:5174 electron .",
    "build": "vite build",
    "electron:prod": "npm run build && electron .",
    "build:desktop": "vite build && electron-builder --win"
  },
  "dependencies": {
    "@react-pdf/renderer": "^4.3.0",
    "@tailwindcss/typography": "^0.5.16",
    "date-fns": "^4.1.0",
    "firebase": "^12.0.0",
    "html-react-parser": "^5.2.6",
    "html2pdf.js": "^0.10.3",
    "jspdf": "^3.0.1",
    "jspdf-autotable": "^5.0.2",
    "quill": "^2.0.3",
    "react": "^18.2.0",
    "react-datepicker": "^8.4.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.5.2",
    "react-icons": "^5.5.0",
    "react-quill": "^2.0.0",
    "react-router-dom": "^7.6.3"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^31.2.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.5.6",
    "wait-on": "^7.2.0",
    "tailwindcss": "^3.4.17",
    "vite": "^7.0.4"
  }
  ,
  "build": {
    "appId": "com.ccs.cotizador",
    "productName": "Cotizador",
    "files": [
      "dist/**",
      "electron/**",
      "package.json"
    ],
    "directories": {
      "buildResources": "build",
  "output": "C:\\Users\\danma\\OneDrive\\LUZ AMPARO\\release\\release"
    },
    "win": {
      "target": ["nsis"]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
